<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainlyImageIconStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/logo_vans</item>
    </style>

    <style name="FavoriteFAB">
        <item name="android:backgroundTint">#FF4E53</item>
        <item name="android:src">@drawable/icon_favorite</item>
    </style>

    <style name="BigTitleText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallTitleText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="SubtitleText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ff4e53</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StandardText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="ActionButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">#FF4E53</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
